<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.samy.koko.BlankFragment1"
    android:background="@color/grey">

    <!-- TODO: Update blank fragment layout -->

    <RadioButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Auto"
        android:id="@+id/radioButton2"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="50dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_above="@+id/radioButton" />

    <RadioButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Manual"
        android:id="@+id/radioButton"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose flight mode:"
        android:id="@+id/textView3"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Swipe to choose height >>"
        android:id="@+id/textView4"
        android:layout_marginBottom="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radioButton"
        android:layout_alignEnd="@+id/radioButton" />

</RelativeLayout>
